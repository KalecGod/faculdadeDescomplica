// Criando um array inicial ;

let fruta = ['maçã', 'banana', 'laranja'];

console.log(fruta);
console.log(fruta.length)

// Usando o metodo push();

fruta.push('uva');
fruta.push('abacaxi');
fruta.push('kiwi');

console.log(fruta);
console.log(fruta.length);

// Usando o metodo pop();

for(let i = 0; i < 3; i++) {
    fruta.pop();

console.log(fruta);
console.log(fruta.length);

}


// Usando o metodo shift();

fruta.shift();
fruta.shift();

console.log(fruta);
console.log(fruta.length);